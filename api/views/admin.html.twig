{% extends "layout.html.twig" %}

{% block title %}Administration{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    <div class="tab-content">
        <div class="tab-pane fade in active adminTable" id="membres">
            {% if membres %}
                <div class="table-responsive">
                    <table class="table table-hover table-condensed">
                        <thead>
                        <tr>
                            <th>id</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Date naissance</th>
                            <th>Adresse</th>
                            <th>Code postal</th>
                            <th>Ville</th>
                            <th>Etudes</th>
                            <th>Contrat</th>
                            <th></th>  <!-- Actions column -->
                        </tr>
                        </thead>
                        {% for membre in membres %}
                            <tr>
                                <td><a class="membreTitle" href="{{ path('membre', { 'id': membre.id }) }}">{{ membre.id }}</a></td>
                                <td>{{ membre.nom }}</td>
                                <td>{{ membre.prenom }}</td>
                                <td>{{ membre.dateNaissance }}</td>
                                <td>{{ membre.adresse }}</td>
                                <td>{{ membre.codePostal }}</td>
                                <td>{{ membre.ville }}</td>
                                <td>{{ membre.niveauEtude }}</td>
                                <td>{{ membre.typeContrat }}</td>
                                <td>
                                    <a href="{{ path('admin_membre_edit', { 'id': membre.id }) }}" class="btn btn-info btn-xs" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                                    <a href="{{ path('admin_membre_delete', { 'id': membre.id }) }}" class="btn btn-danger btn-xs" title="Delete"><span class="glyphicon glyphicon-remove"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% else %}
                <div class="alert alert-warning">No members found.</div>
            {% endif %}
            <a href="{{ path('admin_membre_add') }}"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add membre</button></a>
    </div>
{% endblock %}